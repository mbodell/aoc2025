const lineReader = require("line-reader");
const Promise = require('bluebird');

const eachLine = Promise.promisify(lineReader.eachLine);

let filename = process.argv.slice(2)[0] || 'input.txt';

let answer = 0;
let instr = [];
let arrow = 50;

eachLine(filename, function(line) {
	let dir = line.match(/\w/g)[0];
	let dist = line.match(/\d+/g);
	instr.push([dir==='R'?1:-1,parseInt(dist)]);
}).then(function(err) {
	console.log(instr);
	for(let i=0; i<instr.length; i++) {
		console.log(`i is ${i} and instr is ${instr[i]} and arrow is ${arrow}`);
		arrow += instr[i][0]*instr[i][1];
		console.log(`now arrow is ${arrow}`);
		arrow = arrow % 100;
		console.log(`and after mod arrow is ${arrow}`);
		if(arrow === 0) {
			answer++;
		}
	}
  console.log(answer);
});
